{
  "source": {
    "include": ["./"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./public/docs/",
    "tutorials": "./public/tutorials",
    "readme": "./README.md"
  }
}
